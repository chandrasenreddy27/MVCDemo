@model MVCDemo.Models.EmployeeVM

@{
    ViewBag.Title = "EmpDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Employee Details</h2>
@*<h3> @(((DateTime)ViewData["DateTime"])) </h3>*@
<h3>Date: @ViewBag.Date</h3>
<h3> </h3>
<div>
    <h4>EmployeeVM</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.LabelFor(m => m.Name):
            @*@Html.DisplayNameFor(model => model.Name)*@
            @Html.TextBoxFor(m => m.Name, new { @class = "text-box newtxt", @id="txtnew"})
            
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
            @Html.HiddenFor(m => m.Name, new { id="hdnName"})
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Department)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Department)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
